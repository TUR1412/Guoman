{
  "name": "guoman-world",
  "private": true,
  "version": "1.2.0",
  "type": "module",
  "homepage": "https://tur1412.github.io/Guoman",
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "dev": "vite",
    "prebuild": "node ./scripts/generate-seo.js && node -e \"require('fs').writeFileSync('.nojekyll','');\"",
    "build": "vite build && node -e \"require('fs').copyFileSync('.nojekyll', 'dist/.nojekyll'); require('fs').copyFileSync('404.html', 'dist/404.html');\"",
    "build:report": "npm run build && node ./scripts/bundle-report.js",
    "preview": "vite preview",
    "preview:ci": "vite preview --host 127.0.0.1 --port 4173 --strictPort --base /Guoman/",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "test": "vitest run --config vitest.config.js",
    "test:watch": "vitest --config vitest.config.js",
    "test:coverage": "vitest run --coverage --config vitest.config.js",
    "e2e": "npm run build && npm run e2e:ci",
    "e2e:ci": "playwright test",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "optimize:svg": "node ./scripts/optimize-svg.js",
    "lighthouse:baseline": "node ./scripts/lighthouse-baseline.js",
    "budget:bundle": "node ./scripts/bundle-budget.js",
    "check": "npm run format:check && npm run lint && npm run typecheck && npm run test && npm run build && npm run budget:bundle",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist --nojekyll"
  },
  "dependencies": {
    "framer-motion": "^12.29.2",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-router-dom": "^7.13.0",
    "styled-components": "^6.3.8"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.50.0",
    "@storybook/addon-a11y": "10.2.1",
    "@storybook/addon-docs": "10.2.1",
    "@storybook/addon-onboarding": "10.2.1",
    "@storybook/addon-vitest": "10.2.1",
    "@storybook/react-vite": "10.2.1",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.13.0",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.24.0",
    "@typescript-eslint/parser": "^8.24.0",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^4.0.18",
    "axe-core": "^4.11.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "gh-pages": "^6.3.0",
    "globals": "^17.2.0",
    "jsdom": "^27.4.0",
    "prettier": "^3.8.1",
    "storybook": "10.2.6",
    "typescript": "^5.8.2",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  }
}
