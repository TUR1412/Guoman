{
  "name": "guoman-world",
  "private": true,
  "version": "1.1.0",
  "type": "module",
  "homepage": "https://tur1412.github.io/Guoman",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev": "vite",
    "prebuild": "node ./scripts/generate-seo.js && node -e \"require('fs').writeFileSync('.nojekyll',''); console.log('Ensured .nojekyll');\"",
    "build": "vite build && node -e \"require('fs').copyFileSync('.nojekyll', 'dist/.nojekyll'); require('fs').copyFileSync('404.html', 'dist/404.html');\"",
    "build:report": "npm run build && node ./scripts/bundle-report.js",
    "preview": "vite preview",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build",
    "lint": "eslint .",
    "test": "vitest run --config vitest.config.js",
    "test:watch": "vitest --config vitest.config.js",
    "test:coverage": "vitest run --coverage --config vitest.config.js",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "optimize:svg": "node ./scripts/optimize-svg.js",
    "lighthouse:baseline": "node ./scripts/lighthouse-baseline.js",
    "check": "npm run format:check && npm run lint && npm run test && npm run build",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist --nojekyll"
  },
  "dependencies": {
    "framer-motion": "^10.18.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.30.2",
    "styled-components": "^6.1.19"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@storybook/addon-a11y": "^8.6.14",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/react-vite": "^8.6.14",
    "@storybook/test": "^8.6.14",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^18.3.27",
    "@types/react-dom": "^18.3.7",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/coverage-v8": "^4.0.16",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "gh-pages": "^6.3.0",
    "globals": "^16.5.0",
    "jsdom": "^22.1.0",
    "prettier": "^3.7.4",
    "storybook": "^8.6.14",
    "vite": "^6.4.1",
    "vitest": "^3.2.4"
  }
}
